<div class="container-fluid">
    <h1 class='text-center' ><%= @dilemma.occasion %></br></h1>
    <div class="container-fluid center-block">
      <div class='col-md-3 col-xs-3 col-md-offset-3 col-xs-offset-3'>
        <h2 class='text-center'><%= @vote1_count %> votes</h2>
        <%= image_tag @dilemma.option1.url(:large), style: "width: #{@vote1_proportions}%", class: "img-circle img-responsive center-block" %>
      </div>
      <div class='col-md-3 col-xs-3'>
        <h2 class='text-center'><%= @vote2_count %> votes</h2>
        <%= image_tag @dilemma.option2.url(:large), style: "width: #{@vote2_proportions}%", class: "img-circle img-responsive center-block" %>
      </div>
    </div>
    <div class="next-button", style="text-align: center;">
      <h1><%= link_to '', dilemmas_path, class: "glyphicon glyphicon-circle-arrow-right", style: "text-decoration:none; font-size: 60px;" %>
      </h1>
    </div>
</div>
